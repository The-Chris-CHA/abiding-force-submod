</Event>
 
<Event Name="Disable_Retreat_NR">
<Event_Type>STORY_TRIGGER</Event_Type>
<Reward_Type>DISABLE_RETREAT</Reward_Type>
<Reward_Param1>Rebel</Reward_Param1>
<Reward_Param2>1</Reward_Param2>
<Prereq>Battle_Start</Prereq>
</Event>


<!-- Start of battle -->

	<Event Name="Battle_of_Endor_Speech">
		<Event_Type>STORY_AI_NOTIFICATION</Event_Type>
		<Event_Param2>START_SPEECH</Event_Param2>
    	<Reward_Type>SCREEN_TEXT</Reward_Type>
    	<Reward_Param1>TEXT_CONQUEST_ENDOR_NR_BATTLE</Reward_Param1>
		<Reward_Param2>-1</Reward_Param2>
		<Prereq>Battle_Start</Prereq>
  </Event>
  
  <Event Name="Intro_Speech">
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>MULTIMEDIA</Reward_Type>
		<Reward_Param1>TEXT_CONQUEST_ENDOR_NR_BATTLE</Reward_Param1>
		<Reward_Param2>15</Reward_Param2>
		<Reward_Param3 />
		<Reward_Param4 />
		<Reward_Param5 />
		<Reward_Param6 />
		<Reward_Param7 />
		<Reward_Param8 />
		<Reward_Param9>Rebel_Trooper_Loop</Reward_Param9>
		<Reward_Param10>0</Reward_Param10>
		<Prereq>Battle_Start</Prereq>
	</Event>
	
	<Event Name="Objective_Protect_Ackbar">
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>ADD_OBJECTIVE</Reward_Type>
		<Reward_Param1>TEXT_CONQUEST_ENDOR_NR_BATTLE_ACKBAR_OBJECTIVE</Reward_Param1>
		<Prereq>Battle_Start</Prereq>
	</Event>
	
	<Event Name="Objective_Survive">
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>ADD_OBJECTIVE</Reward_Type>
		<Reward_Param1>TEXT_CONQUEST_ENDOR_NR_BATTLE_SURVIVE_OBJECTIVE</Reward_Param1>
		<Prereq>Battle_Start</Prereq>
	</Event>
	
	<Event Name="Wave2_Spawn">
		<Event_Type>STORY_ELAPSED</Event_Type>
		<Event_Param1>120</Event_Param1>
	</Event>
	
  <Event Name="Wave2_Spawn_Speech">
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>MULTIMEDIA</Reward_Type>
		<Reward_Param1>TEXT_CONQUEST_ENDOR_NR_BATTLE_WAVE2</Reward_Param1>
		<Reward_Param2>15</Reward_Param2>
		<Reward_Param3 />
		<Reward_Param4 />
		<Reward_Param5 />
		<Reward_Param6 />
		<Reward_Param7 />
		<Reward_Param8 />
		<Reward_Param9>Rebel_Trooper_Loop</Reward_Param9>
		<Reward_Param10>0</Reward_Param10>
		<Prereq>Wave2_Spawn</Prereq>
	</Event>
	
	<Event Name="Death_Star_Destroyed">
		<Event_Type>STORY_ELAPSED</Event_Type>
		<Event_Param1>80</Event_Param1>
		<Prereq>Wave2_Spawn</Prereq>
	</Event>
	
  <Event Name="Death_Star_Destroyed_Speech">
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>MULTIMEDIA</Reward_Type>
		<Reward_Param1>TEXT_CONQUEST_ENDOR_NR_BATTLE_DS2_DESTROYED</Reward_Param1>
		<Reward_Param2>15</Reward_Param2>
		<Reward_Param3 />
		<Reward_Param4 />
		<Reward_Param5 />
		<Reward_Param6 />
		<Reward_Param7 />
		<Reward_Param8 />
		<Reward_Param9>Rebel_Trooper_Loop</Reward_Param9>
		<Reward_Param10>0</Reward_Param10>
		<Prereq>Death_Star_Destroyed</Prereq>
	</Event>
	
	<Event Name="Imperial_Retreat">
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>FORCE_RETREAT</Reward_Type>
		<Reward_Param1>Empire</Reward_Param1>
		<Prereq>Death_Star_Destroyed</Prereq>
	</Event>
	
<!-- End of battle -->

	<Event Name="Ackbar_Lost">
		<Event_Type>STORY_TACTICAL_DESTROY</Event_Type>
		<Event_Param1>Home_One</Event_Param1>
	</Event>

	<Event Name="Objective_Protect_Ackbar_Failed"> 
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>OBJECTIVE_FAILED</Reward_Type>
		<Reward_Param1>TEXT_CONQUEST_ENDOR_NR_BATTLE_ACKBAR_OBJECTIVE_FAIL</Reward_Param1>
		<Prereq>Ackbar_Lost</Prereq>
	</Event>

	<Event Name="STORY_VICTORY_AI">
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>VICTORY</Reward_Type>
		<Reward_Param1>Empire</Reward_Param1>
		<Prereq>Objective_Protect_Ackbar_Failed</Prereq>
	</Event>

	<Event Name="STORY_VICTORY_Player">
		<Event_Type>STORY_TRIGGER</Event_Type>
		<Reward_Type>VICTORY</Reward_Type>
		<Reward_Param1>Rebel</Reward_Param1>
		<Prereq>Imperial_Retreat</Prereq>
	</Event>
       
</Story>